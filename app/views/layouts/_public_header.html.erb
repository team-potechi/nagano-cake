<header>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#202A4B;">
    <div class="container">
      <a class="navbar-brand" href="/">
        <%= image_tag'linkedin_banner_image_1.png', size:"200x120" %>
      </a>
      <div style="color:#FFF; margin-left:200px; width:300px;">
        <% if customer_signed_in? %>
        ようこそ、<%= current_customer.lastname %>さん！
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown", style = "flex-wrap:wrap;">
        <ul class="navbar-nav ml-auto", style = "margin-left:55%;">
        <% if customer_signed_in? %>
          <li>
            <%= link_to customers_path,class: 'nav-link text-light border border-white rounded mr-3' do %>
              マイページ
            <% end %>
          </li>
          <li>
            <%=  link_to items_path,class: 'nav-link text-light border border-white rounded mr-3' do %>
              商品一覧
            <% end %>
          </li>
          <li>
            <%=  link_to cart_items_path ,class: 'nav-link text-light border border-white rounded mr-3' do %>
              カート
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-light border border-white rounded' do %>
              ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to about_path,class: 'nav-link text-light border border-white rounded mr-3' do %>
              About
            <% end %>
          </li>
          <li>
            <%= link_to items_path, class: 'nav-link text-light border border-white rounded mr-3' do %>
              商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path,class: 'nav-link text-light border border-white rounded mr-3' do %>
              新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path ,class: 'nav-link text-light border border-white rounded' do %>
              ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
        <div class="search_form mt-3", style = "margin-left:37%;">
          <%= form_with method: :get, style:"width:200px;" do |f| %>
            <%= f.text_field :word, placeholder:"Search" %>
            <%= f.submit "検索", class: "btn", style:"background-color:#eee;" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>