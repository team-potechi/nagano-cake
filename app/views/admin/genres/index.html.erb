<div class="container">
  <%= flash[:notice] %>
  <h5 class="text-center", style="background-color:#eee; width:220px; margin:30px 0 50px 60px;"><b>ジャンル一覧・追加</b></h5>
  <%= form_with model:@genre, url:admin_genres_path do |f| %>
    <strong><%= f.label :name, "ジャンル名", style:"margin-top:5px ;" %></strong>
    <%= f.text_field :name, placeholder: "ジャンル名", style:"margin-left:50px;" %>
    <%= f.submit "新規登録", class: "btn btn-success px-4", style:"font-weight:bold; margin-left:50px;" %>
  <% end %>

  <table class="table border-bottom", style="width:320px; margin-top:60px;">
    <tbody>
      <tr class="table-secondary">
        <th><strong>ジャンル</strong></th>
        <th></th>
      </tr>
      <% @genres.each do |genre| %>
        <tr>
          <td class="align-middle"><%= genre.name%></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success px-3", style:"font-weight:bold; margin-left:50px;" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>