<h5>注文履歴詳細</h5>
<table class = "table table-borderless">
  <tbody>
    <tr>
      <td>購入者</td>
      <td><%= @order.customer.lastname %><%= @order.customer.firstname %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>〒<%= @order.postal_code %> <%= @order.address %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= @order.shipping_name %></td>
    </tr>
    <tr>
      <td>支払い方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td><%= @order.status %></td>
      <td></td>
    </tr>
  </tbody>
</table>

<table class = "table">
  <thead>
    <tr>
      <td>
        商品名
      </td>
      <td>
        単価（税込み）
      </td>
      <td>
        数量
      </td>
      <td>
        小計
      </td>
      <td>
        製作ステータス
      </td>
      <td>

      </td>
    </tr>
  </thead>
  <tbody>
    <% @order.order_details.each do |order_detail| %>
    <tr>
      <td>
        <%= order_detail.item.name %>
      </td>
      <td>
        <%= order_detail.tax_price %>
      </td>
      <td>
        <%= order_detail.amount %>
      </td>
      <td>
        <%= order_detail.subtotal %>
      </td>
      <td>
        <%= order_detail.making_status %>
      </td>
      <td>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>