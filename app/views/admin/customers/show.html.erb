<div class='container'>
  <div class='row'>
    <div class='col-md-8'>
      <h4 class="my-4", style="background-color: #f5f5f5; width:290px; padding-left: 12px;"><%= @customer.lastname %><%= @customer.firstname %>さんの会員詳細</h4>
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.lastname %><%= @customer.firstname %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.kana_lastname %><%= @customer.kana_firstname %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.tel %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <% if @customer.is_deleted == false %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td class="text-secondary font-weight-bold">退会</td>
          <% end %>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to '編集する', edit_admin_customer_path, class: "btn btn-success px-3" %>
            <%= link_to '注文内容一覧を見る', admin_path, class: "btn btn-primary ml-5" %>
          </td>
        </tr>
      </table>

    </div>
  </div>
</div>
