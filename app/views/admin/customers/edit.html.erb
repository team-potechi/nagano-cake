<div class='container'>
  <div class='row'>
    <div class='col-md-10'>
      <h4 class="my-4", style="background-color: #f5f5f5; width:340px; padding-left: 12px;"><%= @customer.lastname %><%= @customer.firstname %>さんの会員情報編集</h4>

      <%= render 'error_messages', customer: @customer %>

      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>

        <div class="row mb-3">
          <div class="col-2">
            会員ID
          </div>
          <div class="col-4">
            <%= @customer.id %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :name, "氏名" %>
          </div>
          <div class="col-4">
            <%= f.text_field :lastname, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :firstname, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :kana_name, "フリガナ" %>
          </div>
          <div class="col-4">
            <%= f.text_field :kana_lastname, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :kana_firstname, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :postal_code, "郵便番号" %>
          </div>
          <div class="col-4">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-10">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :tel, "電話番号" %>
          </div>
          <div class="col-4">
            <%= f.text_field :tel, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-4">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :is_deleted, "会員ステータス" %>
          </div>
          <div class="col-4 mt-3">
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", class: "text-secondary font-weight-bold" %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会", class: "text-secondary font-weight-bold" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
          </div>
          <div class="col-4">
            <%= f.submit "編集を保存", class: "btn btn-success px-5 mt-3" %>
          </div>
        </div>

      <% end %>



    </div>
  </div>
</div>