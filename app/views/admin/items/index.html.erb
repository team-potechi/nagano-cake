<div class="container">
  <h5 class="text-center", style="background-color:#eee; width:120px; margin:30px 0 0 115px;"><b>商品一覧</b></h5>
  <%= link_to new_admin_item_path, style:"margin-left:1000px; font-size: 40px; color:#555;" do %>
    <i class="fas fa-plus-circle"></i>
  <% end %>
  <div class="row">
    <div class="col-12">
      <table class="table table-borderless", style="width:950px; margin: 0 auto; border-top:1px solid #bbb;">
        <thead>
          <tr class="table-secondary">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td class="align-middle"><%= item.id %></td>
              <td class="align-middle", style="text-decoration:underline">
                <%= link_to admin_item_path(item), class:"text-dark" do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td class="align-middle"><%= item.price.to_s(:delimited) %></td>
              <td class="align-middle"><%= item.genre.name %></td>
              <td width="200px"></td>
              <% if item.sale_status == true %>
                <td class="text-success font-weight-bold">販売中</td>
              <% else %>
                <td class="text-secondary font-weight-bold">販売停止中</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>