<div class = "container mt-5">
  <div class = "row">
    <div class = "col-9 ml-auto mr-auto">
      <h5 class = "text-center mb-3" style = "background-color:#eee; width:160px; font-weight: bold;">注文履歴一覧</h5>
      <table class="table">
        <thead>
          <tr style="background-color: #eee;">
            <td>
              <b>購入日時</b>
            </td>
            <td>
              <b>購入者</b>
            </td>
            <td>
              <b>注文個数</b>
            </td>
            <td>
              <b>注文ステータス</b>
            </td>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order) do %>
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                <% end %>
              </td>
              <td>
                <%= order.shipping_name %>
              </td>
              <td>
                <%= order.order_details.count %>
              </td>
              <td>
                <%= order.status %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class = "ml-auto mr-auto", style = "width:110px"><%= paginate @orders %></div>
    </div>
  </div>
</div>