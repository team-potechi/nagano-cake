<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class="m-auto", style="margin-left:210px;">
      <h5 class="text-center", style="background-color:#ddd; width:120px; margin:30px 0 30px 100px;">ログイン</h5>
      <p class=" text-center", style="background-color:#ddd; width:250px; margin-left:130px;">会員の方はこちらからログイン</p>
      <tbody>
        <tr>
          <td><%= f.label :email,"メールアドレス",style: "padding-left:0px;"%></td>
          <td><%= f.email_field :email, autofocus: true,  placeholder:"sample@example.com",style: "margin-left:40px;", size: "40px" %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード",style: "padding-left:0px; margin-top:20px;"%></td>
          <td><%= f.password_field :password, autocomplete: "current-password",style: "margin-left:40px;", size: "40px"  %></td>
        </tr>

        <tr>
          <td></td>
          <td>
            <div class="actions">
              <%= f.submit "ログイン", class: "pl-5 pr-5 btn btn-primary",style: "margin-top:20px; margin-left:40px;" %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
  <p class="text-center", style="background-color:#ddd; width:220px; margin:50px 0 30px 130px;">会員登録がお済みでない方</p>
  <p class=" text-center", style="width:300px; margin-left:230px;"><%= render "public/shared/links" %>からログインしてください。</p>
</div>