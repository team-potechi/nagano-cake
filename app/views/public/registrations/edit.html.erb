<div class='container'>
  <div class='row'>
    <div class='col-md-9'>
      <h4 class="ml-5 my-4", style="background-color: #eee; width:170px; padding-left: 12px;"><b>会員情報編集</b></h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :name, "氏名" %>
          </div>
          <div class="col-4">
            <%= f.text_field :lastname, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :firstname, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :kana_name, "フリガナ" %>
          </div>
          <div class="col-4">
            <%= f.text_field :kana_lastname, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :kana_firstname, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :postal_code, "郵便番号" %>
          </div>
          <div class="col-4">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-10">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :tel, "電話番号" %>
          </div>
          <div class="col-4">
            <%= f.text_field :tel, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-4">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>


        <div class="row">
          <div class="col-2">
          </div>
          <div class="col-5">
            <%= f.submit "編集内容を保存", class: "btn btn-success px-5 mt-3", style:"font-weight:bold;" %>
          </div>
          <div class="col-5">
            <%= link_to "退会する", confirm_customers_path, method: :get, class: "btn btn-danger px-3 mt-3", style:"font-weight:bold;" %>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>