<div class = "ml-auto mr-auto mt-5", style = "width:1000px;">
  <%= form_with model:@order, url: orders_confirm_path do |f| %>
  <h5 class = "ml-5 text-center", style = "background-color:#eee; width:150px; font-weight:bold;">注文情報入力</h5>
  <div class = "mt-3">
    <h5 style = "font-weight:bold;">支払い方法</h5>
    <div class = "ml-5">
      <%= f.radio_button :payment_method,  "クレジットカード" %>
      <%= f.label :payment_method,  "クレジットカード" %>
      <%= f.radio_button :payment_method, "銀行振込",class: "ml-3" %>
      <%= f.label :payment_method, "銀行振込" %>
    </div>
  </div>
  <div class = "mt-3">
    <h5 style = "font-weight:bold;">お届け先</h5>
    <div class = "ml-5">
      <%= f.radio_button :select_address, "ご自身の住所", checked: true %>
      <%= f.label :select_address,  "ご自身の住所" %><br>
      　　　〒<%= current_customer.postal_code %><%= current_customer.address %><br>
      　　　<%= current_customer.lastname %><%= current_customer.firstname %><br>
      <%= f.radio_button :select_address, "登録済み住所から選択" %>
      <%= f.label :select_address,  "登録済み住所から選択" %><br>
      <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display),  {}, {class: 'form-control form-select ml-5', style: "width:800px;"} %><br>
      <%= f.radio_button :select_address, "新しいお届け先" %>
      <%= f.label :select_address,  "新しいお届け先" %><br>
      <%= f.label :new_postal_code,  "郵便番号(ハイフンなし)", class: "ml-5" %>
      <%= f.text_field :new_postal_code,class: "form-control", placeholder: "0000000", style: "width:200px; display:inline-block;" %><br>
      <%= f.label :new_address,  "住所", class: "ml-5" %>
      <%= f.text_field :new_address,class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0", style: "width:500px; display:inline-block; margin-left:138px;" %><br>
      <%= f.label :new_shipping_name,  "宛名", class: "ml-5" %>
      <%= f.text_field :new_shipping_name,class: "form-control", placeholder: "令和道子", style: "width:200px; display:inline-block; margin-left:138px;" %><br>
      <%= f.submit "確認画面へ進む", class: "mt-3 btn btn-primary", style: "width:150px; margin-left:380px;" %>
    </div>
  </div>
  <% end %>
</div>