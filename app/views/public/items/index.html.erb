<%= flash[:notice] %>

 <div class='container mt-5 h-75'>

  <div class='row h-100'>
    <div class='col-md-2'>
      <div class = "genre-search-head border border-dark text-center">
        <b>ジャンル検索</b>
      </div>
      <div class = "genre-search-contents border border-dark", style = "height:300px">
        <% @genres.each do |genre| %>
          <p class = "ml-2 mt-2">
            <%= link_to edit_admin_genre_path(genre), class:"text-dark" do %>
              <%= genre.name %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>

    <div  class='col-md-10'>
      <div>
        <div class = "new-arrival">
          <div style="display:flex; flex-wrap:wrap;">
            <h3><strong>商品一覧</strong></h3>
            <div class="mt-2"><strong>（全<%= @items.count%>件）</strong></div>
          </div>
          <div class = "new-arrival-contents" style="display:flex; flex-wrap:wrap;">
            <% @items.each do |item| %>
              <%= link_to item_path(item), class:"text-dark"  do %>
              <div class="mr-3">
                  <%= image_tag item.get_item_image, size:"200x150" %>
                  <p class="mt-3 mb-1"><strong><%= item.name %></strong></p>
                  <p class="mb-5"><strong>￥<%= item.add_tax_price.to_s(:delimited) %></strong></p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div style="margin:0 auto;">
      <%= paginate @items%>
    </div>
  </div>
</div>
